<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/css/main.css"
            fx:controller="com.example.recipeapp.controller.MainViewController">

    <!-- ===== Top ===== -->
    <top>
        <VBox spacing="8" focusTraversable="false">

            <!-- ===== グローバルヘッダー ===== -->
            <HBox spacing="10" alignment="CENTER_LEFT"
                  styleClass="main-header">
                <padding>
                    <Insets top="8" right="12" bottom="8" left="12"/>
                </padding>

                <Label text="Recipe App"
                       styleClass="app-title"/>

                <!-- 右寄せ -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- ハンバーガーメニュー -->
                <Button text="☰"
                        styleClass="menu-button"
                        onAction="#onOpenMenu"/>
            </HBox>

            <!-- ===== 検索・フィルタ ===== -->
            <VBox spacing="8">
                <padding>
                    <Insets top="6" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Search -->
                <HBox spacing="10">
                    <Label text="Search:"/>
                    <TextField fx:id="searchField"
                               promptText="レシピ名を検索"/>
                </HBox>

                <!-- Category & Sort -->
                <HBox spacing="10">
                    <Label text="Category:"/>
                    <ComboBox fx:id="categoryCombo"/>

                    <Label text="Sort:"/>
                    <ComboBox fx:id="sortKeyCombo"/>
                    <ComboBox fx:id="sortOrderCombo"/>
                </HBox>
            </VBox>

        </VBox>
    </top>

    <!-- ===== Center ===== -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true">
            <FlowPane fx:id="flowPane"
                      hgap="20"
                      vgap="20">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>

</BorderPane>
